<Window x:Class="MyToDoList_2024.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyToDoList_2024"
        mc:Ignorable="d"
        Title="MyToDoList" Height="450" Width="800" Background="Black">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" MinWidth="50" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"  />
            <RowDefinition  />
        </Grid.RowDefinitions>

        <Grid Background="Blue" Grid.Column="0" Grid.Row="1" >
            
        </Grid>
        <WrapPanel>
            <Button Content="Button" Margin="20 10" Width="100">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF00D0FF"/>
                        <GradientStop Color="#FF00FDFD" Offset="0.154"/>
                        <GradientStop Color="#FF14FF01" Offset="0.965"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Button Content="Button" Margin="20 10" Width="100" >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF00D0FF"/>
                        <GradientStop Color="#FF00FDFD" Offset="0.154"/>
                        <GradientStop Color="#FF14FF01" Offset="0.965"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

        </WrapPanel>


        <Grid Background="LimeGreen" Grid.Column="1" Grid.Row="1" >

        </Grid>

        <Grid Background="Yellow" Grid.Column="2" Grid.Row="1" >

        </Grid>

    </Grid>
</Window>
